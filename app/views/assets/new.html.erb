<div class="content-title booyah-box col-10 offset-1">
  <h1>Enter Your Asset Details</h1>
  <%= simple_form_for @asset do |f| %>
    <%= f.input :name, required: true %>
    <%= f.input :description %>
  
    <%# # FOR-IMAGE-UPLOAD %>
    <%= f.fields_for :images, Image.new do |i| %>
     <div class="field">
      <%= i.file_field :path, :multiple => true, name: "images[path][]" %> 
     </div>
    <% end %>   
    <%# # FOR-IMAGE-UPLOAD %>


    <% if flash[:error].present? %>
      <div class="errors">
        <%= flash[:error].html_safe %>
      </div>
    <% end %>

    <%= f.submit 'Create', class: 'btn btn-primary mt-4' %>
  <% end %>
  <%= yield %>
</div>
