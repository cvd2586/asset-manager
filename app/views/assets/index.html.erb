<div class="content-title d-flex flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h2 class="index-title">Assets</h2>
  <div class="btn-toolbar mb-2 mb-md-0">
  <a class="d-flex align-items-center text-muted" href=assets/new aria-label="Add a new asset">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-plus-circle"><circle cx="12" cy="12" r="10"></circle><line x1="12" y1="8" x2="12" y2="16"></line><line x1="8" y1="12" x2="16" y2="12"></line></svg>
  </a>
  </div>
</div>
<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    <% @assets.each do |asset| %>
      <tr>
        <th><%= asset.id %></th>
        <th><%= asset.name %></th>
        <th><%= asset.description %></th>
      </tr>
    <% end %>
  </tbody>
</table>
